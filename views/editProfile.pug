include includes/helpers
html(lang="en")
  head
    include includes/header
    link(rel="stylesheet" href="/profile.css")
  body(style={background:user.team === 'blu' ? 'var(--blue)' : user.team === 'giallo' ? 'var(--yellow)' : 'var(--red)'})
    main
      form.card.edit(action="/profile/edit" method="POST")
        h2 Edit your profile
        .row
          label Nickname:
          input#nick(name="nick" pattern="[a-zA-Z0-9]+" title="Numbers and letters only" type="text" maxlength="16" placeholder=user.displayName)
        .row
          label Level:
          input#level(name="level" type="number" placeholder=user.level)
        .row
          label Trainer code:
          input#code(name="code" type="text" pattern="([0-9]{4}[ ]{0,1}){3}" placeholder=user.code minlength="12" maxlength="14" title="Insert only numbers, with or without spaces (ie 0000 0000 0000 or 123456789012)")
        input(type="submit")
  include includes/footer
  